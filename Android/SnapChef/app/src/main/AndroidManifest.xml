<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="app.snapchef.com.base">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.camera2" />

    <!-- To connect to AWS Backend -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".LoginView"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".HomeView"
            android:label="@string/home_name" />
        <activity
            android:name=".AccountView"
            android:label="@string/account_name" />
        <activity
            android:name=".CreateRecipeView"
            android:label="CreateRecipe"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".RegisterView"
            android:label="Register" />
        <activity
            android:name=".ReportRecipeView"
            android:label="ReportRecipe" />
        <activity
            android:name=".ReportErrorView"
            android:label="ReportError" />
        <activity
            android:name=".SearchView"
            android:label="Search" />
        <activity
            android:name=".ViewRecipeView"
            android:label="ViewRecipe" />
        <activity android:name="app.snapchef.com.base.apiTESTActivity"></activity>
    </application>

</manifest>